<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Pur">

		 <select id="selectPurList" resultType="pur">
		 	SELECT * FROM PURPOSAL ORDER BY reg_date DESC
		 </select>
		 
		 <select id="selectPurCnt" resultType="int">
		 	SELECT COUNT(*) FROM PURPOSAL
		 </select>
		 
		 <select id="readPur" resultType="pur">
		 	SELECT * FROM PURPOSAL WHERE pdt_name = #{pdt_name}
		 </select>
		 
		 <insert id="insertPur">
		 INSERT INTO PURPOSAL (pdt_name,reg_date,writer,pdt_type,bigo,target,pic,orgpic)
		 VALUES (#{pdt_name},#{reg_date},#{writer},#{pdt_type},#{bigo},#{target},#{pic},#{orgpic})
		 </insert>
		 
		 <update id="updatePur"></update>
		 
 
</mapper>